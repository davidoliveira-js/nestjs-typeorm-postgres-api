{
  "name": "nestjs-typeorm-postgres-api",
  "description": "Consiste em uma API REST que utiliza o framework Nest.js, ORM Typeorm e banco de dados Postgres..",
  "website": "https://tooljet.io/",
  "repository": "https://github.com/davidoliveira-js/nestjs-typeorm-postgres-api",
  "success_url": "/",
  "scripts":{
    "predeploy": "npm install && npm run build"
  },
  "env": {
    "NODE_ENV": {
      "description": "Environment [production/development]",
      "value": "production"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "image": "heroku/nodejs",
  "addons": ["heroku-postgresql"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}